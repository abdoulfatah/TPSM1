<!-- ###########################################     #         Modele de document XML          #     #        pour representer les recettes    #     ########################################### --><!--============================= Racine  =============================--><!ELEMENT root (liste_recettes, liste_ingredients, liste_auteurs, liste_categories)><!--============================= Liste de recettes =============================--><!ELEMENT liste_recettes (recette*)><!-- Recette --><!ELEMENT recette (nom, identificateur?,resume?, photo?, date_publication?, difficulte, nom_ingredient+, nom_sous-categorie, nbre_personnes,Preparation,Cuisson,Repos?,instructions,nom_auteur,note?)><!ATTLIST recette id ID #REQUIRED><!-- Titre de la recette --><!ELEMENT nom (#PCDATA)><!-- Nom + id --><!ELEMENT identificateur (#PCDATA)><!-- Resume de la recette --><!ELEMENT resume (#PCDATA)><!-- Lien vers une image du plat  --><!ELEMENT photo (#PCDATA)><!-- Date de publication --><!ELEMENT date_publication (#PCDATA)><!-- Difficulte de la recette --><!ELEMENT difficulte (#PCDATA)><!-- Ingredients utilises dans la recette --><!ELEMENT nom_ingredient (#PCDATA)><!-- Nombre de personnes pour lequel le plat est prevu --><!ELEMENT nbre_personnes (#PCDATA)><!--Temps de preparation--><!ELEMENT Preparation (#PCDATA)><!--Temps de cuisson--><!ELEMENT Cuisson (#PCDATA)><!--Temps de repos--><!ELEMENT Repos (#PCDATA)><!--Description detaillee de la preparation--><!ELEMENT instructions (#PCDATA)><!--Note des utilisateurs--><!ELEMENT note (#PCDATA)><!--Auteur de la recette--><!ELEMENT nom_auteur (#PCDATA)><!--Sous-categorie dont la recette fait partie--><!ELEMENT nom_sous-categorie (#PCDATA)><!--============================= Liste d'ingredients =============================--><!ELEMENT liste_ingredients (ingredient*)><!--Ingredient--><!ELEMENT ingredient (nom, Apport_energetique?,  Apport_nutritif?, saison?, nom_recette*, descriptif?)><!ATTLIST ingredient id ID #REQUIRED><!-- Recettes utilisant l'ingredient  --><!ELEMENT nom_recette (#PCDATA)><!-- Apport nutritif de l'ingredient  --><!ELEMENT Apport_nutritif (#PCDATA)><!-- Apport energetique de l'ingredient --><!ELEMENT Apport_energetique (#PCDATA)><!--Saison--><!ELEMENT saison (#PCDATA)><!--Description de l'ingredient--><!ELEMENT descriptif (#PCDATA)><!--============================= Liste d'auteurs =============================--><!ELEMENT liste_auteurs (auteur*)><!--Auteur--><!ELEMENT auteur (idext?,nom?,prenom?,pays?,sexe?,nom_recette*,biographie?)><!ATTLIST auteur id ID #REQUIRED><!--Nom complet de l'auteur--><!ELEMENT idext (#PCDATA)><!--Prenom de l'auteur--><!ELEMENT prenom (#PCDATA)><!--Sexe de l'auteur--><!ELEMENT sexe (#PCDATA)><!--Pays d'origine d'un auteur--><!ELEMENT pays (#PCDATA)><!--Biographie d'un autuer--><!ELEMENT biographie (#PCDATA)><!--============================= Liste de categories de plats =============================--><!ELEMENT  liste_categories (categorie+)><!--Categorie (entree,dessert,etc)--><!ELEMENT categorie (nom, nom-court, descriptif, sous-categorie*)><!ATTLIST categorie id ID #REQUIRED><!--Version courte du nom de la categorie--><!ELEMENT nom-court (#PCDATA)><!--Sous-categorie (entree chaude, entree froide,etc)--><!ELEMENT sous-categorie (nom,nom-court?, descriptif?,nom_categorie)><!ATTLIST sous-categorie id ID #REQUIRED><!ELEMENT nom_categorie (#PCDATA)>